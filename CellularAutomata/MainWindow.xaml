<Window x:Class="CellularAutomata.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CellularAutomata"
        mc:Ignorable="d"
        Title="MainWindow"
        x:Name="MainView">
    <DockPanel>
        <StackPanel x:Name="Menu" DockPanel.Dock="Top" Orientation="Horizontal">
            <Label>Rule Number</Label>
            <TextBox x:Name="RuleCodeBox" MinWidth="50"></TextBox>
            <Label>Cells Count</Label>
            <TextBox x:Name="CellCountBox" MinWidth="50"></TextBox>
            <Label>Iterations</Label>
            <TextBox x:Name="IterationsBox" MinWidth="50"></TextBox>
            <Button x:Name="RunButton" Click="RunSimulation">Run</Button>
        </StackPanel>
        <ScrollViewer
            HorizontalScrollBarVisibility="Auto"
            VerticalScrollBarVisibility="Auto">
            <Canvas 
                    x:Name="CellsCanva" 
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    
                />
        </ScrollViewer>
    </DockPanel>
</Window>

